@model Category

<div class="col-8 col-offset-2">
    <form method="post">
        <div class="border p-2 mt-1">
            <div class="row p-1">
                <h4>Add new Category</h4>
            </div>
            <div class="row mb-1">
                <label asp-for="Name" class="col-3"></label>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="row mb-1">
                <label asp-for="DisplayOrder" class="col-3"></label>
                <div class="col-8">
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
                <a type="button" class="btn btn-primary" asp-action="Index" asp-controller="Category">List</a>
            </div>
        </div>
    </form>
</div>