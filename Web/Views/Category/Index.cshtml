@model IEnumerable<Category>

<div class="container p-1">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Add New</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td>@data.Name</td>
                <td>@data.DisplayOrder</td>
                <td>@data.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>